<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity"
	minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
	prefWidth="600.0" spacing="20.0" xmlns="http://javafx.com/javafx/8"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="flightTicketsShopUI.client.fxmlcontrollers.AdminAddNewFlightController">
	<children>
		<Label text="Add new flight:" />
		<GridPane alignment="CENTER" hgap="10.0" vgap="10.0">
			<columnConstraints>
				<ColumnConstraints hgrow="SOMETIMES"
					minWidth="10.0" />
				<ColumnConstraints hgrow="SOMETIMES"
					minWidth="10.0" prefWidth="100.0" />
			</columnConstraints>
			<rowConstraints>
				<RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
				<RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
				<RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
				<RowConstraints minHeight="10.0" prefHeight="30.0"
					vgrow="SOMETIMES" />
				<RowConstraints minHeight="10.0" prefHeight="30.0"
					vgrow="SOMETIMES" />
				<RowConstraints minHeight="10.0" prefHeight="30.0"
					vgrow="SOMETIMES" />
			</rowConstraints>
			<children>
				<TextField fx:id="startTF" GridPane.columnIndex="1" />
				<TextField fx:id="endTF" GridPane.columnIndex="1"
					GridPane.rowIndex="1" />
				<Label text="Start:" />
				<Label text="End:" GridPane.rowIndex="1" />
				<Label text="Length in km:" GridPane.rowIndex="2" />
				<Label text="Price:" GridPane.rowIndex="3" />
				<Label text="Airplane:" GridPane.rowIndex="4" />
				<TextField fx:id="lengthTF" GridPane.columnIndex="1"
					GridPane.rowIndex="2" />
				<TextField fx:id="priceTF" GridPane.columnIndex="1"
					GridPane.rowIndex="3" />
				<Button contentDisplay="RIGHT" mnemonicParsing="false"
					onAction="#handleSave" prefHeight="25.0" prefWidth="85.0"
					text="Save" GridPane.columnIndex="1" GridPane.rowIndex="5" />
				<ComboBox fx:id="airplanesCB" prefHeight="25.0"
					prefWidth="297.0" GridPane.columnIndex="1" GridPane.rowIndex="4" />
			</children>
			<padding>
				<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
			</padding>
		</GridPane>
	</children>
	<padding>
		<Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
	</padding>
</VBox>
